<div class="panel-body" <% if @post.image.url.exists? %> style="background-image:url(<%= image_tag(@post.image.url) %>);" <% else %> style="background: $blue;" <%end%> >
  
        <h2 class="title">
          <%= link_to post.title, post %>
        </h2>
        <hr/>
        <p class="date"></p>
        Published at
        <%= time_ago_in_words(post.created_at) %>
        by
        <%= post.user.email %>
        <br/>
        <p class="tags"></p>
        <%= link_to raw post.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %>
      </div>
    </div>